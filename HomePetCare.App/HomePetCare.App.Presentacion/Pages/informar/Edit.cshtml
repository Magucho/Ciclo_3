@model HomePetCare.App.Presentacion.Pages.EditModel
@{
int  idDog=  Model.dog.Id;
}
<h2>Edición de información: @Model.dog.NameVDog</h2>
<form method="post">
    <input type="hidden" asp-for="dog.Id" />

    <div class="form-group">
        <label asp-for="dog.NameVDog"></label>
        <input asp-for="dog.NameVDog" class="form-control">
        <span class="text-danger" asp-validation-for="dog.NameVDog"></span>
    </div>

    <div class="form-group">
        <label asp-for="dog.Breed"></label>
        <input asp-for="dog.Breed" class="form-control">
        <span class="text-danger" asp-validation-for="dog.Breed"></span>
    </div>

    <div class="form-group">
        <label asp-for="dog.FechaNacimiento"></label>
        <input asp-for="dog.FechaNacimiento" class="form-control">
        <span class="text-danger" asp-validation-for="dog.FechaNacimiento"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="dog.Color"></label>
        <input asp-for="dog.Color" class="form-control">
        <span class="text-danger" asp-validation-for="dog.Color"></span>
    </div>
    <style> 

    .btn-primary{
      background-color: blueviolet;
      color: azure;

    }
</style>
    
    <button type="submit" class="btn btn-primary">Do it</button> 

</form>
<a asp-page="./List" class="btn-default">Tirando información</a>